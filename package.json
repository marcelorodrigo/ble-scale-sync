{
  "name": "ble-scale-sync",
  "version": "1.2.2",
  "description": "Universal BLE Smart Scale bridge. Captures body composition from Renpho, Xiaomi & 20+ others, syncs to Garmin Connect, MQTT (Home Assistant), InfluxDB, Webhooks & Ntfy. Headless CLI for Raspberry Pi, Linux, macOS & Windows.",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "setup": "tsx src/wizard/index.ts",
    "setup-garmin": "python3 garmin-scripts/setup_garmin.py",
    "scan": "tsx src/scan.ts",
    "validate": "tsx src/config/validate-cli.ts",
    "test": "vitest run",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "smart-scale",
    "garmin",
    "scale",
    "ble",
    "bluetooth",
    "body-composition",
    "health"
  ],
  "author": "KristiÃ¡n Partl",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@inquirer/prompts": "^8.2.0",
    "@stoprocent/noble": "^2.3.10",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "dotenv": "^16.4.7",
    "mqtt": "^5.10.0",
    "node-ble": "^1.13.0",
    "tsx": "^4.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
