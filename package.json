{
  "name": "blescalesync",
  "version": "2.0.0",
  "description": "Sync BLE smart scale data (weight + body composition) to Garmin Connect",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "setup-garmin": "python3 garmin-scripts/setup_garmin.py",
    "scan": "tsx src/scan.ts",
    "test": "vitest run",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "smart-scale",
    "garmin",
    "scale",
    "ble",
    "bluetooth",
    "body-composition",
    "health"
  ],
  "author": "KristiÃ¡n Partl",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-25",
    "dotenv": "^16.4.7",
    "mqtt": "^5.10.0",
    "node-ble": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
